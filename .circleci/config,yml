version: 2.1

orbs:
  docker: circleci/docker@2.1.1
  kubernetes: circleci/kubernetes@1.3.0

jobs:
  docker_job:
    docker:
      - image: cimg/base:stable
    steps:
      - run:
          name: run docker
          command: |
            chmod u+x docker-run.sh
            ./docker-run.sh
  k8s_job:
    docker:
      - image: cimg/base:stable
    steps:
      - run:
          name: run kubernetes
          command: |
            chmod u+x k8s-run.sh
            ./k8s-run.sh

workflows:
  default:
     jobs:
      - docker_job
      - k8s_job